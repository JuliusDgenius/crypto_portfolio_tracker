{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2021",
    "module": "commonjs",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@libs/core": ["libs/core/src/index.ts"],
      
      "@libs/common": ["libs/common/src/index.ts"],
      
      "@libs/auth": ["libs/auth/src/index.ts"],
     
      "@libs/database": ["libs/database/src/index.ts"],
      
    },
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}