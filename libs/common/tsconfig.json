{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "../../dist/libs/common",
    "rootDir": "src",
    "composite": true,
    "baseUrl": ".",
    "incremental": true,
    "paths": {
      "@libs/common": ["../../core/src/index"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test", "**/*spec.ts"],
  "references": [
    {"path": "../core"}
  ]
}