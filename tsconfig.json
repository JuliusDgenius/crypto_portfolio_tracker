{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "incremental": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./",
    "paths": {
      "@lib/shared": [
        "libs/shared/src"
      ],
      "@lib/shared/*": [
        "libs/shared/src/*"
      ]
    }
  },
  "include": [
    "apps/**/*",
    "libs/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/dist"
  ],
  "references": [
    {
      "path": "libs/core"
    },
    {
      "path": "libs/common"
    },
    {
      "path": "libs/auth"
    },
    {
      "path": "libs/database"
    }
  ]
}