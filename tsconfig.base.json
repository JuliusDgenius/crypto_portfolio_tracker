{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2017",
    "module": "CommonJS",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@libs/auth": ["libs/auth/src/index.ts"],
      "@libs/common": ["libs/common/src/index.ts"],
      "@libs/config": ["libs/config/src/index.ts"],
      "@libs/core": ["libs/core/src/index.ts"],
      "@libs/database": ["libs/database/src/index.ts"],
      "@libs/portfolio": ["libs/portfolio/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}