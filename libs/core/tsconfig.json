{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "../../dist/libs/core",
    "rootDir": "src",
    "composite": true,
    "baseUrl": ".",
    "incremental": true,
    "paths": {
      "@libs/database": ["../database/src/index"],
      "@libs/common": ["../common/src/index"],
      "@libs/core": ["../core/src/index"],
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test", "**/*spec.ts"],
  "references": [
    {"path": "../common"}
  ]
}