{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "root": "apps/api",
  "sourceRoot": "apps/api/src",
  "compilerOptions": {
    "assets": [
      {
        "include": "../../../libs/common/src/email/templates/**/*.hbs",
        "outDir": "dist/apps/api/templates",
        "watchAssets": true
      }
    ],
    "watchAssets": true,
    "webpack": true,
    "tsConfigPath": "apps/api/tsconfig.json",
    "deleteOutDir": true
  },
  "projects": {
    "api": {
      "type": "application",
      "root": "apps/api",
      "entryFile": "main",
      "sourceRoot": "apps/api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api/tsconfig.json"
      }
    }
  }
}