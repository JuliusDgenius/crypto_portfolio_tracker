{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
      // Module and compilation settings
      "module": "commonjs",
      "target": "es2017",
      "moduleResolution": "node",
      
      // Output settings
      "outDir": "../../dist/libs/portfolio",
      "rootDir": "src",
      "declaration": true,
      "sourceMap": true,
      
      // Build optimization
      "tsBuildInfoFile": "../../dist/libs/portfolio/tsconfig.tsbuildinfo",
      "composite": true,
      "incremental": true,
      
      // Type checking and generation
      "removeComments": true,
      "allowSyntheticDefaultImports": true,
      "types": ["node"],
      
      // Path resolution
      "baseUrl": "./",
    },
    // File handling
    "include": ["src/**/*"],
    "exclude": [
      "node_modules",
      "dist",
      "test",
      "**/*.spec.ts",
      "**/*.test.ts"
    ],
    // Library dependencies
    "references": [
      {"path": "../common"},
      {"path": "../core"},
      {"path": "../database"},
      {"path": "../auth"}
    ]
  }